@model eShop.ViewModels.System.Users.RoleAssignRequest

@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>RoleAssign</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RoleAssign" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            @for (var i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-group">
                    <label>Set Role: @Model.Roles[i].Description</label>
                    <label asp-for="Roles[i].Name" class="control-label">
                        <input type="checkbox" asp-for="Roles[i].Selected" />
                        <input type="hidden" asp-for="Roles[i].Id" />
                        <input type="hidden" asp-for="Roles[i].Name" />
                    </label>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                  <a class="btn btn-outline-info" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



